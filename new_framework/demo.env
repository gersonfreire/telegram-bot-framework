# Environment variables for the example bots
# Copy this file to .env and fill in your values

# Required: Your Telegram Bot Token (get from @BotFather)
BOT_TOKEN=1076729431:AAE95s3Q_QKkEtVxnProc5BRxdqxKo_S7v8

# "BigVPSbot": {
#     "token": "7532915390:AAHoTtPNVSfnM6FVxW68V6e0mA9jo4INKEE",

# Required: Your Telegram user ID (you can get this from @userinfobot)
OWNER_USER_ID=438429121

# Optional: Admin user IDs (comma-separated)
ADMIN_USER_IDS=438429121

# Optional: Chat ID for log messages
LOG_CHAT_ID=438429121

# Optional: Debug mode (true/false)
DEBUG=true

# Optional: Database URL for persistent storage
DATABASE_URL=sqlite:///bot_data.db

# Optional: Enable/disable plugins
ENABLE_SYSTEM_MONITOR=true
ENABLE_USER_STATS=true

# Optional: Job scheduler settings
USE_PERSISTENT_JOBS=false
JOBS_DATABASE_URL=sqlite:///jobs.db

# Optional: Payment provider settings
# Stripe
STRIPE_API_KEY=your_stripe_api_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# PIX (Brazil)
PIX_ACCOUNT_KEY=your_pix_key
PIX_MERCHANT_NAME=Your Business Name
PIX_MERCHANT_CITY=Your City

# Optional: Encryption key for sensitive data
ENCRYPTION_KEY=your_encryption_key_here

# Optional: Additional configuration
INSTANCE_NAME=MyBot
MAX_WORKERS=4
RATE_LIMIT_ENABLED=true
