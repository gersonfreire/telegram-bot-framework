# ========================================
# Demo Bot - Configuração de Exemplo
# ========================================
# 
# Copie este arquivo para .env e configure
# com seus valores reais.

# ========================================
# CONFIGURAÇÕES OBRIGATÓRIAS
# ========================================

# Token do bot (obrigatório)
# Obtenha em: https://t.me/BotFather
BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# ID do proprietário (obrigatório)
# Seu ID de usuário no Telegram
OWNER_USER_ID=123456789

# ========================================
# CONFIGURAÇÕES OPCIONAIS
# ========================================

# IDs dos administradores (opcional)
# Lista separada por vírgulas
ADMIN_USER_IDS=123456789,987654321,555666777

# Chat ID para logs (opcional)
# ID do chat/grupo para receber logs
LOG_CHAT_ID=-1001234567890

# Modo debug (opcional, padrão: true)
# true = logs detalhados, false = logs básicos
DEBUG=true

# Nome da instância (opcional, padrão: TelegramBot)
# Nome identificador do bot
INSTANCE_NAME=DemoBot

# Persistência (opcional, padrão: none)
# Opções: none, json, pickle, redis
PERSISTENCE_BACKEND=json

# Auto-carregamento de plugins (opcional, padrão: true)
# true = carrega plugins automaticamente
AUTO_LOAD_PLUGINS=true

# ========================================
# CONFIGURAÇÕES AVANÇADAS
# ========================================

# Reutilizar conexões (opcional, padrão: true)
# true = reutiliza conexões HTTP
REUSE_CONNECTIONS=true

# Modo assíncrono (opcional, padrão: true)
# true = usa modo assíncrono
USE_ASYNC=true

# Máximo de workers (opcional, padrão: 4)
# Número de threads para processamento
MAX_WORKERS=4

# Tamanho do pool de conexões (opcional, padrão: 8)
# Número de conexões simultâneas
CONNECTION_POOL_SIZE=8

# ========================================
# CONFIGURAÇÕES DE LOGGING
# ========================================

# Nível de log (opcional, padrão: INFO)
# Opções: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Habilitar logs no console (opcional, padrão: true)
CONSOLE_LOGGING=true

# Habilitar logs em arquivo (opcional, padrão: true)
FILE_LOGGING=true

# Caminho do arquivo de log (opcional, padrão: logs/bot.log)
LOG_FILE_PATH=logs/bot.log

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================

# Chave de criptografia (opcional)
# Gerada automaticamente se não fornecida
ENCRYPTION_KEY=

# Habilitar criptografia de dados sensíveis (opcional, padrão: false)
ENCRYPT_SENSITIVE_DATA=false

# ========================================
# CONFIGURAÇÕES DE PLUGINS
# ========================================

# Diretório de plugins (opcional)
# Caminho para pasta de plugins
PLUGINS_DIR=./

# Plugins para carregar (opcional)
# Lista de plugins específicos para carregar
LOAD_PLUGINS=DemoPlugin,HelloPlugin

# Plugins para ignorar (opcional)
# Lista de plugins para não carregar
IGNORE_PLUGINS=

# ========================================
# CONFIGURAÇÕES DE WEBHOOK (AVANÇADO)
# ========================================

# URL do webhook (opcional)
# Para uso com webhook em vez de polling
WEBHOOK_URL=

# Porta do webhook (opcional, padrão: 8443)
WEBHOOK_PORT=8443

# Certificado SSL (opcional)
# Caminho para certificado SSL para webhook
WEBHOOK_CERT=

# ========================================
# CONFIGURAÇÕES DE PROXY (AVANÇADO)
# ========================================

# Proxy HTTP (opcional)
# URL do proxy HTTP se necessário
HTTP_PROXY=

# Proxy HTTPS (opcional)
# URL do proxy HTTPS se necessário
HTTPS_PROXY=

# ========================================
# NOTAS IMPORTANTES
# ========================================
#
# 1. NUNCA compartilhe seu BOT_TOKEN
# 2. Mantenha o arquivo .env seguro
# 3. Use valores reais, não os de exemplo
# 4. Teste em ambiente de desenvolvimento primeiro
# 5. Faça backup das configurações
#
# ======================================== 